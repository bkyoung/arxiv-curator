# ===========================
# Database Configuration
# ===========================
DATABASE_URL=postgresql://postgres:password@localhost:5433/arxiv_curator?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=arxiv_curator

# ===========================
# MinIO S3 Storage
# ===========================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=arxiv-curator

# ===========================
# Application
# ===========================
NODE_ENV=development
PORT=3000

# ===========================
# Authentication (Auth.js v5)
# ===========================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000

# ===========================
# AI Services (Optional)
# ===========================

# Google AI (Gemini) - For cloud LLM operations
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=

# OpenAI - Alternative cloud LLM provider
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Ollama - Local LLM server
# Install from: https://ollama.com/download
OLLAMA_BASE_URL=http://localhost:11434

# ===========================
# Production Settings
# ===========================
# Uncomment for production deployment

# NEXTAUTH_URL=https://your-domain.com
# MINIO_ENDPOINT=minio
# NODE_ENV=production
